{
    "include": ["src"],
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist/",
        "sourceMap": false,
        "declaration": true,
        "noImplicitAny": true,
        "lib": ["DOM", "ES6", "ES2019"],
        "module": "CommonJS",
        "target": "ES6",
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "strict": false,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": ["src/examples", "src/tests"]
}
