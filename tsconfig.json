{
    "include": [ "src" ],
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": [
            "DOM",
            "ES6",
            "ES2019"
        ],
        "module": "CommonJS",
        "target": "ES6",
        "esModuleInterop": true,
        "allowJs": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "strict": false,
        "experimentalDecorators": true
    }
}
